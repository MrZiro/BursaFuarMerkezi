@model ContentType

@{
    ViewData["Title"] = Model.Id == 0 ? "Create Content Type" : "Edit Content Type";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-12">
            <h2 class="text-primary">
                @(Model.Id == 0 ? "Create" : "Update") Content Type
            </h2>
        </div>
    </div>

    <form method="post" asp-action="Upsert">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="text-end mt-4">
            <a asp-controller="ContentType" asp-action="Index" class="btn btn-secondary" style="width:150px">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <button type="submit" class="btn btn-primary" style="width:150px">
                <i class="bi bi-save"></i> @(Model.Id == 0 ? "Create" : "Update")
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
} 