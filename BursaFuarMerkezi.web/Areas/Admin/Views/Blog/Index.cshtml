﻿
@section Styles {
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.0/css/dataTables.dataTables.min.css" />
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Blog Posts
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Blog" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Blog Post
            </a>
        </div>
    </div>

    <div class="table-container">
        <table id="tblData" class="">
            <thead>
                <!-- DataTable will populate headers -->
            </thead>
            <tbody>
                <!-- DataTable will populate data -->
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_PartialReqScript" />

    <script>
        $(document).ready(() => {
            initializeDataTableWithOption('Blog', [
                {
                    title: 'Title (TR/EN)',
                    data: null,
                    width: '25%',
                    render: function (data, type, row) {
                        const tr = row.titleTr || '';
                        const en = row.titleEn || '';
                        return `<div><div>${tr}</div><div class="text-muted small">${en}</div></div>`;
                    }
                },
                {
                    title: 'Content Type (TR/EN)',
                    data: null,
                    width: '18%',
                    render: function (data, type, row) {
                        const tr = row.contentType ? row.contentType.nameTr : '';
                        const en = row.contentType ? row.contentType.nameEn : '';
                        if (!tr && !en) return 'None';
                        return `<div><div>${tr}</div><div class="text-muted small">${en}</div></div>`;
                    }
                },
                {
                    title: 'Slug (TR/EN)',
                    data: null,
                    width: '20%',
                    render: function (data, type, row) {
                        const tr = row.slugTr || '';
                        const en = row.slugEn || '';
                        return `<div><div>${tr}</div><div class="text-muted small">${en}</div></div>`;
                    }
                },
                {
                    title: 'Status',
                    data: 'isPublished',
                    width: '10%',
                    render: function (data) {
                        return data ? 
                            '<span class="badge bg-success">Published</span>' : 
                            '<span class="badge bg-warning text-dark">Draft</span>';
                    }
                },
                {
                    title: 'Created',
                    data: 'createdAt',
                    width: '15%',
                    render: function(data) {
                        return new Intl.DateTimeFormat('en-GB', {
                            day: '2-digit',
                            month: '2-digit',
                            year: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit',
                            hour12: false
                        }).format(new Date(data)).replace(',', ' -');
                    }
                }
            ]);
        });
    </script>
} 