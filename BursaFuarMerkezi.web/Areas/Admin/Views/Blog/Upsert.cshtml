@model BlogVM
@section Styles {
    <style>
        .img-container {
            position: relative;
            width: 100%;
            margin-bottom: 1rem;
        }

        .img-preview {
            width: 100%;
            max-height: 300px;
            object-fit: contain;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .img-remove {
            position: absolute;
            top: 5px;
            right: 5px;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 50%;
            padding: 5px;
            cursor: pointer;
            color: #dc3545;
        }

        .dropzone {
            border: 2px dashed #ddd;
            border-radius: 5px;
            padding: 25px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

            .dropzone:hover {
                border-color: #007bff;
            }

            .dropzone.dragover {
                border-color: #28a745;
                background-color: rgba(40, 167, 69, 0.1);
            }
    </style>
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-12">
            <h2 class="text-primary">
                @(Model.Blog.Id == 0 ? "Create" : "Update") Blog
            </h2>
        </div>
    </div>

    <form method="post" enctype="multipart/form-data">
        <input asp-for="Blog.Id" hidden />
        <input asp-for="Blog.CardImageUrl" hidden />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col-md-8">
                <div class="border p-3 mt-2 mb-3 rounded-2">
                    <ul class="nav nav-tabs" id="langTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="tr-tab" data-bs-toggle="tab" data-bs-target="#tr" type="button" role="tab" aria-controls="tr" aria-selected="true">TR</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="en-tab" data-bs-toggle="tab" data-bs-target="#en" type="button" role="tab" aria-controls="en" aria-selected="false">EN</button>
                        </li>
                    </ul>
                    <div class="tab-content pt-3" id="langTabsContent">
                        <div class="tab-pane fade show active" id="tr" role="tabpanel" aria-labelledby="tr-tab">
                            <div class="mb-3">
                                <label asp-for="Blog.TitleTr" class="form-label">Title (TR)</label>
                                <input asp-for="Blog.TitleTr" class="form-control" />
                                <span asp-validation-for="Blog.TitleTr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Blog.SlugTr" class="form-label">URL Slug (TR)</label>
                                <input asp-for="Blog.SlugTr" class="form-control" placeholder="Leave blank to auto-generate" />
                                <span asp-validation-for="Blog.SlugTr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Blog.ShortDescriptionTr" class="form-label">Short Description (TR)</label>
                                <textarea asp-for="Blog.ShortDescriptionTr" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Blog.ShortDescriptionTr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Content (TR)</label>
                                <textarea asp-for="Blog.ContentTr" class="form-control Editor" rows="12"></textarea>
                                <span asp-validation-for="Blog.ContentTr" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="en" role="tabpanel" aria-labelledby="en-tab">
                            <div class="mb-3">
                                <label asp-for="Blog.TitleEn" class="form-label">Title (EN)</label>
                                <input asp-for="Blog.TitleEn" class="form-control" />
                                <span asp-validation-for="Blog.TitleEn" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Blog.SlugEn" class="form-label">URL Slug (EN)</label>
                                <input asp-for="Blog.SlugEn" class="form-control" placeholder="Leave blank to auto-generate" />
                                <span asp-validation-for="Blog.SlugEn" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Blog.ShortDescriptionEn" class="form-label">Short Description (EN)</label>
                                <textarea asp-for="Blog.ShortDescriptionEn" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Blog.ShortDescriptionEn" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Content (EN)</label>
                                <textarea asp-for="Blog.ContentEn" class="form-control Editor" rows="12"></textarea>
                                <span asp-validation-for="Blog.ContentEn" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="border p-3 mt-2 mb-3 rounded-2">
                    <div class="mb-3">
                        <label asp-for="Blog.ContentTypeId" class="form-label">Content Type</label>
                        <select asp-for="Blog.ContentTypeId" class="form-select" 
                                asp-items="@Model.ContentTypeList">
                        </select>
                        <span asp-validation-for="Blog.ContentTypeId" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="col-md-4">
                <!-- Card Image Section -->
                <div class="border p-3 mt-2 rounded-2">
                    <label class="form-label">Card Image</label>
                    <p class="text-muted small">This image will be used for cards or thumbnails</p>

                    <div class="dropzone" id="card-image-dropzone" enabled="true">
                        <input type="file" id="cardImageInput" asp-for="CardImage" class="d-none" accept=".jpg,.jpeg,.png,.gif,.webp" />
                        <div id="card-dropzone-content">
                            <i class="bi bi-cloud-arrow-up fs-3"></i>
                            <p class="mb-1">Drag and drop an image here, or click to select</p>
                            <p class="text-muted small mb-0">Accepted: JPG, JPEG, PNG, GIF, WEBP (Max 5MB)</p>
                            <p class="text-muted small mb-0 mt-2"><strong>Required dimensions:</strong> 300×550 pixels</p>
                        </div>
                    </div>
                    <span asp-validation-for="CardImage" class="text-danger d-block mt-2"></span>
                </div>
                <div class="mb-3 text-center" id="card-image-preview-container">
                    @if (!string.IsNullOrEmpty(Model.Blog.CardImageUrl))
                    {
                        <div class="img-container">
                            <input asp-for="Blog.CardImageUrl" hidden />
                            <img src="@Model.Blog.CardImageUrl" id="cardImagePreview" class="img-preview" />
                            <div class="img-remove" id="removeCardImage" title="Remove card image">
                                <i class="bi bi-x-circle-fill"></i>
                            </div>
                        </div>
                        <p class="text-muted small">Current card image. Replace by uploading a new one.</p>
                    }
                    else
                    {
                        <div class="img-container" style="display:none;">
                            <img src="" id="cardImagePreview" class="img-preview" />
                            <div class="img-remove" id="removeCardImage" title="Remove card image">
                                <i class="bi bi-x-circle-fill"></i>
                            </div>
                        </div>
                        <p class="text-muted small" id="card-preview-caption" style="display:none;">Card image preview. Submit to save changes.</p>
                    }
                </div>

                <div class="border p-3 mt-2 rounded-2">
                    <ul class="nav nav-tabs" id="seoLangTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="seo-tr-tab" data-bs-toggle="tab" data-bs-target="#seo-tr" type="button" role="tab" aria-controls="seo-tr" aria-selected="true">SEO (TR)</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="seo-en-tab" data-bs-toggle="tab" data-bs-target="#seo-en" type="button" role="tab" aria-controls="seo-en" aria-selected="false">SEO (EN)</button>
                        </li>
                    </ul>
                    <div class="tab-content pt-3" id="seoLangTabsContent">
                        <div class="tab-pane fade show active" id="seo-tr" role="tabpanel" aria-labelledby="seo-tr-tab">
                            <div class="mb-3">
                                <label asp-for="Blog.MetaDescriptionTr" class="form-label">Meta Description (TR)</label>
                                <textarea asp-for="Blog.MetaDescriptionTr" class="form-control" rows="3"
                                          placeholder="Brief description for search engines"></textarea>
                                <span asp-validation-for="Blog.MetaDescriptionTr" class="text-danger"></span>
                                <div class="form-text">Recommended: 150-160 characters</div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Blog.MetaKeywordsTr" class="form-label">Meta Keywords (TR)</label>
                                <input asp-for="Blog.MetaKeywordsTr" class="form-control" placeholder="Comma-separated keywords" />
                                <span asp-validation-for="Blog.MetaKeywordsTr" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="seo-en" role="tabpanel" aria-labelledby="seo-en-tab">
                            <div class="mb-3">
                                <label asp-for="Blog.MetaDescriptionEn" class="form-label">Meta Description (EN)</label>
                                <textarea asp-for="Blog.MetaDescriptionEn" class="form-control" rows="3"
                                          placeholder="Brief description for search engines"></textarea>
                                <span asp-validation-for="Blog.MetaDescriptionEn" class="text-danger"></span>
                                <div class="form-text">Recommended: 150-160 characters</div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Blog.MetaKeywordsEn" class="form-label">Meta Keywords (EN)</label>
                                <input asp-for="Blog.MetaKeywordsEn" class="form-control" placeholder="Comma-separated keywords" />
                                <span asp-validation-for="Blog.MetaKeywordsEn" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="border p-3 mt-2">
                    <div class="mb-3 form-check">
                        <input asp-for="Blog.IsPublished" type="checkbox" class="form-check-input" />
                        <label asp-for="Blog.IsPublished" class="form-check-label">Published</label>
                        <div class="form-text">Uncheck to save as draft</div>
                    </div>
                </div>

                <!-- Gallery Upload -->
                <div class="border p-3 mt-2 rounded-2">
                    <label class="form-label">Blog Gallery</label>
                    <p class="text-muted small">Select multiple images to add to the gallery</p>
                    <input type="file" asp-for="GalleryImages" class="form-control" accept=".jpg,.jpeg,.png,.gif,.webp" multiple />
                    <span class="text-muted small d-block mt-1">Accepted: JPG, JPEG, PNG, GIF, WEBP</span>
                    <div class="mt-3">
                        @if (Model.ExistingImages != null && Model.ExistingImages.Any())
                        {
                            <div class="row g-2">
                                @foreach (var img in Model.ExistingImages)
                                {
                                    <div class="col-6 col-md-4">
                                        <div class="position-relative border rounded p-1">
                                            <img src="@img.ImageUrl" class="img-fluid" alt="Gallery image" />
                                            <button type="button" class="btn btn-sm btn-outline-danger position-absolute top-0 end-0 m-1"
                                                    data-image-id="@img.Id" onclick="deleteGalleryImage(@img.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>

                <div class="text-end mt-3">
                    <a asp-controller="Blog" asp-action="Index" class="btn btn-secondary" style="width:150px">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary" style="width:150px">
                        <i class="bi bi-save"></i> @(Model.Blog.Id == 0 ? "Create" : "Update")
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
        <script src="https://cdn.tiny.cloud/1/ksmksgnd1ppn1dd8gfjy1rhu22ru4v191js89isjbbf27fnm/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
        <script src="~/admin/scripts/Editor.js"></script>
        <partial name="_ValidationScriptsPartial" />
        <script src="~/admin/scripts/Dropzone.js"></script>
    }
    <script>
        function turkishNormalize(text) {
            return text
                .replace(/ı/g, 'i').replace(/İ/g, 'i')
                .replace(/ö/g, 'o').replace(/Ö/g, 'o')
                .replace(/ş/g, 's').replace(/Ş/g, 's')
                .replace(/ğ/g, 'g').replace(/Ğ/g, 'g')
                .replace(/ü/g, 'u').replace(/Ü/g, 'u')
                .replace(/ç/g, 'c').replace(/Ç/g, 'c');
        }
        function makeSlug(text) {
            if (!text) return '';
            const lower = turkishNormalize(text.toLowerCase());
            const withoutDiacritics = lower.normalize('NFD').replace(/\p{Diacritic}+/gu, '');
            return withoutDiacritics
                .replace(/[^a-z0-9\s-]/g, '-')
                .replace(/[\n\r\t_]+/g, ' ')
                .replace(/\s+/g, '-')
                .replace(/-+/g, '-')
                .replace(/^-+|-+$/g, '');
        }

        // TR
        $('#Blog_TitleTr').on('change keyup', function () {
            var slug = makeSlug($(this).val());
            $('#Blog_SlugTr').val(slug);
        });
        // EN
        $('#Blog_TitleEn').on('change keyup', function () {
            var slug = makeSlug($(this).val());
            $('#Blog_SlugEn').val(slug);
        });

        function deleteGalleryImage(id) {
            if (!id) return;
            Swal.fire({
                title: 'Delete image?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete',
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Admin/Blog/DeleteImage/' + id,
                        type: 'DELETE'
                    }).done(function (res) {
                        if (res.success) {
                            location.reload();
                        } else {
                            toastr.error(res.message || 'Failed to delete image');
                        }
                    }).fail(function () {
                        toastr.error('Failed to delete image');
                    });
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            var mainTrTab = document.querySelector('#tr-tab');
            var mainEnTab = document.querySelector('#en-tab');
            var seoTrTab = new bootstrap.Tab(document.querySelector('#seo-tr-tab'));
            var seoEnTab = new bootstrap.Tab(document.querySelector('#seo-en-tab'));

            if (mainTrTab) {
                mainTrTab.addEventListener('shown.bs.tab', function () {
                    seoTrTab.show();
                });
            }

            if (mainEnTab) {
                mainEnTab.addEventListener('shown.bs.tab', function () {
                    seoEnTab.show();
                });
            }
        });
    </script>
}