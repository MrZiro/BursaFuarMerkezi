@model List<Category>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Test" asp-action="Create" class="btn btn-primary">
                Create New Category
            </a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
		        @foreach (var item in Model.OrderBy(o => o.Id))
		        {
                    <tr id="row-@item.Id">
				        <td>
					        @item.Name
				        </td>
				        <td>
					        @item.DisplayOrder
				        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Test" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                @* <a asp-controller="Test" asp-action="Delete" class="btn btn-danger mx-2"> *@
                                @*     <i class="bi bi-trash-fill"></i> Delete *@
                                @* </a> *@
                                <button type="button"
                                        class="btn btn-danger"
                                        onclick="deleteRow(@item.Id,'@Url.Action("Delete")')">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </button>
                            </div>
                        </td>
			        </tr>
		        }
            </tbody>
        </table>

    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJ+YB+2n4zXaz2bJ9N6p0oK9ZXp5nEzafTNEI="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script src="~/admin/scripts/req.js" asp-append-version="true"></script>

}