@model Slider

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-12">
            <h2 class="text-danger">
                Delete Slider
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-danger">
                        <i class="bi bi-exclamation-triangle"></i> 
                        Are you sure you want to delete this slider?
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This action cannot be undone. The slider and its associated images will be permanently removed.
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Title (Turkish):</label>
                                <p class="form-control-plaintext">@(Model.TitleTr ?? "No title")</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Title (English):</label>
                                <p class="form-control-plaintext">@(Model.TitleEn ?? "No title")</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Display Order:</label>
                                <p class="form-control-plaintext">@Model.DisplayOrder</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Status:</label>
                                <p class="form-control-plaintext">
                                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Created At:</label>
                                <p class="form-control-plaintext">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.LinkUrl))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Link URL:</label>
                                    <p class="form-control-plaintext">
                                        <a href="@Model.LinkUrl" target="_blank" class="text-decoration-none">
                                            @Model.LinkUrl
                                            @if (Model.OpenInNewTab)
                                            {
                                                <i class="bi bi-box-arrow-up-right"></i>
                                            }
                                        </a>
                                    </p>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Desktop Image:</label>
                                    <div>
                                        <img src="@Model.ImageUrl" alt="Desktop slider image" 
                                             class="img-fluid rounded" style="max-height: 200px; object-fit: cover;" />
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.MobileImageUrl))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Mobile Image:</label>
                                    <div>
                                        <img src="@Model.MobileImageUrl" alt="Mobile slider image" 
                                             class="img-fluid rounded" style="max-height: 200px; max-width: 120px; object-fit: cover;" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.DescriptionTr) || !string.IsNullOrEmpty(Model.DescriptionEn))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Description:</label>
                            @if (!string.IsNullOrEmpty(Model.DescriptionTr))
                            {
                                <p class="form-control-plaintext"><strong>TR:</strong> @Model.DescriptionTr</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.DescriptionEn))
                            {
                                <p class="form-control-plaintext"><strong>EN:</strong> @Model.DescriptionEn</p>
                            }
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <form method="post">
                        <input asp-for="Id" hidden />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Yes, Delete Slider
                        </button>
                        <a asp-controller="Slider" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
