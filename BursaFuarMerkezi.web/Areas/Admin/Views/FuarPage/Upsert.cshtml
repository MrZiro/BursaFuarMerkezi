@model FuarPageVM

@section Styles {
    <style>
        .img-container {
            position: relative;
            width: 100%;
            margin-bottom: 1rem;
        }

        .img-preview {
            width: 100%;
            max-height: 300px;
            object-fit: contain;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .img-remove {
            position: absolute;
            top: 5px;
            right: 5px;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 50%;
            padding: 5px;
            cursor: pointer;
            color: #dc3545;
        }

        .dropzone {
            border: 2px dashed #ddd;
            border-radius: 5px;
            padding: 25px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

            .dropzone:hover {
                border-color: #007bff;
            }

            .dropzone.dragover {
                border-color: #28a745;
                background-color: rgba(40, 167, 69, 0.1);
            }
    </style>
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-12">
            <h2 class="text-primary">
                @(Model.FuarPage.Id == 0 ? "Create" : "Update") Fuar Test
            </h2>
        </div>
    </div>

    <form method="post" enctype="multipart/form-data">
        <input asp-for="FuarPage.Id" hidden />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col-md-8">
                <div class="border p-3 mt-2 mb-3 rounded-2 ">
                    <ul class="nav nav-tabs" id="langTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="tr-tab" data-bs-toggle="tab" data-bs-target="#tr" type="button" role="tab" aria-controls="tr" aria-selected="true">TR</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="en-tab" data-bs-toggle="tab" data-bs-target="#en" type="button" role="tab" aria-controls="en" aria-selected="false">EN</button>
                        </li>
                    </ul>
                    <div class="tab-content pt-3" id="langTabsContent">
                        <div class="tab-pane fade show active" id="tr" role="tabpanel" aria-labelledby="tr-tab">
                            <div class="mb-3">
                                <label asp-for="FuarPage.TitleTr" class="form-label">Title (TR)</label>
                                <input asp-for="FuarPage.TitleTr" class="form-control" />
                                <span asp-validation-for="FuarPage.TitleTr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FuarPage.SubTitleTr" class="form-label">Sub Title (TR)</label>
                                <input asp-for="FuarPage.SubTitleTr" class="form-control" />
                                <span asp-validation-for="FuarPage.SubTitleTr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FuarPage.SlugTr" class="form-label">URL Slug (TR)</label>
                                <input asp-for="FuarPage.SlugTr" class="form-control" placeholder="Leave blank to auto-generate" />
                                <span asp-validation-for="FuarPage.SlugTr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FuarPage.ContentTr" class="form-label">Content (TR)</label>
                                <textarea asp-for="FuarPage.ContentTr" class="form-control Editor"></textarea>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="en" role="tabpanel" aria-labelledby="en-tab">
                            <div class="mb-3">
                                <label asp-for="FuarPage.TitleEn" class="form-label">Title (EN)</label>
                                <input asp-for="FuarPage.TitleEn" class="form-control" />
                                <span asp-validation-for="FuarPage.TitleEn" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FuarPage.SubTitleEn" class="form-label">Sub Title (EN)</label>
                                <input asp-for="FuarPage.SubTitleEn" class="form-control" />
                                <span asp-validation-for="FuarPage.SubTitleEn" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FuarPage.SlugEn" class="form-label">URL Slug (EN)</label>
                                <input asp-for="FuarPage.SlugEn" class="form-control" placeholder="Leave blank to auto-generate" />
                                <span asp-validation-for="FuarPage.SlugEn" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FuarPage.ContentEn" class="form-label">Content (EN)</label>
                                <textarea asp-for="FuarPage.ContentEn" class="form-control Editor"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Fuar Künyesi (Fair Information) Section -->
                <div class="border p-3 mt-2 mb-3 rounded-2">
                    <h4 class="mb-3">Fuar Künyesi</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FuarPage.StartDate" class="form-label">Başlangıç Tarihi</label>
                            <input asp-for="FuarPage.StartDate" type="date" class="form-control" value="@Model.FuarPage.StartDate.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="FuarPage.StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="FuarPage.EndDate" class="form-label">Bitiş Tarihi</label>
                            <input asp-for="FuarPage.EndDate" type="date" class="form-control" value="@Model.FuarPage.EndDate.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="FuarPage.EndDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FuarPage.FairHall" class="form-label">Fuar Salonu</label>
                            <input asp-for="FuarPage.FairHall" class="form-control" />
                            <span asp-validation-for="FuarPage.FairHall" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="FuarPage.VisitingHours" class="form-label">Ziyaret Saatleri</label>
                            <input asp-for="FuarPage.VisitingHours" class="form-control" placeholder="09:30-18:00" />
                            <span asp-validation-for="FuarPage.VisitingHours" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#org-tr" type="button" role="tab">TR</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#org-en" type="button" role="tab">EN</button>
                            </li>
                        </ul>
                        <div class="tab-content pt-3">
                            <div class="tab-pane fade show active" id="org-tr" role="tabpanel">
                                <label asp-for="FuarPage.OrganizerTr" class="form-label">Organizatör (TR)</label>
                                <input asp-for="FuarPage.OrganizerTr" class="form-control" />
                                <span asp-validation-for="FuarPage.OrganizerTr" class="text-danger"></span>
                                <label asp-for="FuarPage.FairCategoryTr" class="form-label mt-3">Fuar Konusu (TR)</label>
                                <input asp-for="FuarPage.FairCategoryTr" class="form-control" />
                                <span asp-validation-for="FuarPage.FairCategoryTr" class="text-danger"></span>
                                <label asp-for="FuarPage.FairLocationTr" class="form-label mt-3">Fuar Alanı (TR)</label>
                                <input asp-for="FuarPage.FairLocationTr" class="form-control" />
                                <span asp-validation-for="FuarPage.FairLocationTr" class="text-danger"></span>
                            </div>
                            <div class="tab-pane fade" id="org-en" role="tabpanel">
                                <label asp-for="FuarPage.OrganizerEn" class="form-label">Organizer (EN)</label>
                                <input asp-for="FuarPage.OrganizerEn" class="form-control" />
                                <span asp-validation-for="FuarPage.OrganizerEn" class="text-danger"></span>
                                <label asp-for="FuarPage.FairCategoryEn" class="form-label mt-3">Fair Category (EN)</label>
                                <input asp-for="FuarPage.FairCategoryEn" class="form-control" />
                                <span asp-validation-for="FuarPage.FairCategoryEn" class="text-danger"></span>
                                <label asp-for="FuarPage.FairLocationEn" class="form-label mt-3">Fair Location (EN)</label>
                                <input asp-for="FuarPage.FairLocationEn" class="form-control" />
                                <span asp-validation-for="FuarPage.FairLocationEn" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FuarPage.City" class="form-label">Şehir</label>
                        <input asp-for="FuarPage.City" class="form-control" placeholder="Bursa" />
                        <span asp-validation-for="FuarPage.City" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FuarPage.WebsiteUrl" class="form-label">Web Sitesi</label>
                        <input asp-for="FuarPage.WebsiteUrl" class="form-control" placeholder="https://risingcity.com.tr" />
                        <span asp-validation-for="FuarPage.WebsiteUrl" class="text-danger"></span>
                    </div>
                </div>

                
            </div>

            <div class="col-md-4">
                <div class="border p-3 mt-2 rounded-2">
                    <label class="form-label">Featured Image</label>

                    <div class="dropzone" id="image-dropzone" enabled="true">
                        <input type="file" id="featuredImageInput" asp-for="FeaturedImage" class="d-none" accept=".jpg,.jpeg,.png,.gif,.webp" />
                        <div id="dropzone-content">
                            <i class="bi bi-cloud-arrow-up fs-3"></i>
                            <p class="mb-1">Drag and drop an image here, or click to select</p>
                            <p class="text-muted small mb-0">Accepted: JPG, JPEG, PNG, GIF, WEBP (Max 5MB)</p>
                        </div>
                    </div>
                    <span asp-validation-for="FeaturedImage" class="text-danger d-block mt-2"></span>
                </div>
                <div class="mb-3 text-center" id="image-preview-container">
                    @if (!string.IsNullOrEmpty(Model.FuarPage.FeaturedImageUrl))
                    {
                        <div class="img-container">
                            <input asp-for="FuarPage.FeaturedImageUrl" hidden />
                            <img src="@Model.FuarPage.FeaturedImageUrl" id="featuredImagePreview" class="img-preview" />
                            <div class="img-remove" id="removeImage" title="Remove image">
                                <i class="bi bi-x-circle-fill"></i>
                            </div>
                        </div>
                        <p class="text-muted small">Current image. Replace by uploading a new one.</p>
                    }
                    else
                    {
                        <div class="img-container" style="display:none;">
                            <img src="" id="featuredImagePreview" class="img-preview" />
                            <div class="img-remove" id="removeImage" title="Remove image">
                                <i class="bi bi-x-circle-fill"></i>
                            </div>
                        </div>
                        <p class="text-muted small" id="preview-caption" style="display:none;">Image preview. Submit to save changes.</p>
                    }
                </div>

                <!-- Card Image Section -->
                <div class="border p-3 mt-2 rounded-2">
                    <label class="form-label">Card Image</label>
                    <p class="text-muted small">This image will be used for cards or thumbnails</p>

                    <div class="dropzone" id="card-image-dropzone" enabled="true">
                        <input type="file" id="cardImageInput" asp-for="CardImage" class="d-none" accept=".jpg,.jpeg,.png,.gif,.webp" />
                        <div id="card-dropzone-content">
                            <i class="bi bi-cloud-arrow-up fs-3"></i>
                            <p class="mb-1">Drag and drop an image here, or click to select</p>
                            <p class="text-muted small mb-0">Accepted: JPG, JPEG, PNG, GIF, WEBP (Max 5MB)</p>
                            <p class="text-muted small mb-0 mt-2"><strong>Required dimensions:</strong> 300×550 pixels</p>
                        </div>
                    </div>
                    <span asp-validation-for="CardImage" class="text-danger d-block mt-2"></span>
                </div>
                <div class="mb-3 text-center" id="card-image-preview-container">
                    @if (!string.IsNullOrEmpty(Model.FuarPage.CardImageUrl))
                    {
                        <div class="img-container">
                            <input asp-for="FuarPage.CardImageUrl" hidden />
                            <img src="@Model.FuarPage.CardImageUrl" id="cardImagePreview" class="img-preview" />
                            <div class="img-remove" id="removeCardImage" title="Remove card image">
                                <i class="bi bi-x-circle-fill"></i>
                            </div>
                        </div>
                        <p class="text-muted small">Current card image. Replace by uploading a new one.</p>
                    }
                    else
                    {
                        <div class="img-container" style="display:none;">
                            <img src="" id="cardImagePreview" class="img-preview" />
                            <div class="img-remove" id="removeCardImage" title="Remove card image">
                                <i class="bi bi-x-circle-fill"></i>
                            </div>
                        </div>
                        <p class="text-muted small" id="card-preview-caption" style="display:none;">Card image preview. Submit to save changes.</p>
                    }
                </div>

                <div class="border p-3 mt-2 rounded-2">
                    <div class="mb-3">
                        <label asp-for="FuarPage.MetaDescription" class="form-label">Meta Description</label>
                        <textarea asp-for="FuarPage.MetaDescription" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="FuarPage.MetaDescription" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FuarPage.MetaKeywords" class="form-label">Meta Keywords</label>
                        <input asp-for="FuarPage.MetaKeywords" class="form-control" placeholder="Comma-separated keywords" />
                        <span asp-validation-for="FuarPage.MetaKeywords" class="text-danger"></span>
                    </div>
                </div>
                <div class="border p-3 mt-2">
                    <div class="mb-3 form-check">
                        <input asp-for="FuarPage.IsPublished" type="checkbox" class="form-check-input" />
                        <label asp-for="FuarPage.IsPublished" class="form-check-label">Published</label>
                    </div>
                </div>

                <div class="text-end mt-3">
                    <a asp-controller="FuarPage" asp-action="Index" class="btn btn-secondary" style="width:150px">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary" style="width:150px">
                        <i class="bi bi-save"></i> @(Model.FuarPage.Id == 0 ? "Create" : "Update")
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    @{
        <script src="https://cdn.tiny.cloud/1/ksmksgnd1ppn1dd8gfjy1rhu22ru4v191js89isjbbf27fnm/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
        <script src="~/admin/scripts/Editor.js"></script>
        <partial name="_ValidationScriptsPartial" />
		<script src="~/admin/scripts/Dropzone.js"></script>
    }
    <script>
        function turkishNormalize(text) {
            return text
                .replace(/ı/g, 'i').replace(/İ/g, 'i')
                .replace(/ö/g, 'o').replace(/Ö/g, 'o')
                .replace(/ş/g, 's').replace(/Ş/g, 's')
                .replace(/ğ/g, 'g').replace(/Ğ/g, 'g')
                .replace(/ü/g, 'u').replace(/Ü/g, 'u')
                .replace(/ç/g, 'c').replace(/Ç/g, 'c');
        }
        function makeSlug(text) {
            if (!text) return '';
            const lower = turkishNormalize(text.toLowerCase());
            const withoutDiacritics = lower.normalize('NFD').replace(/\p{Diacritic}+/gu, '');
            return withoutDiacritics
                .replace(/[^a-z0-9\s-]/g, '-')
                .replace(/[\n\r\t_]+/g, ' ')
                .replace(/\s+/g, '-')
                .replace(/-+/g, '-')
                .replace(/^-+|-+$/g, '');
        }

        // TR
        $('#FuarPage_TitleTr').on('change keyup', function () {
            var slug = makeSlug($(this).val());
            if (!$('#FuarPage_SlugTr').val()) {
                $('#FuarPage_SlugTr').val(slug);
            }
        });
        // EN
        $('#FuarPage_TitleEn').on('change keyup', function () {
            var slug = makeSlug($(this).val());
            if (!$('#FuarPage_SlugEn').val()) {
                $('#FuarPage_SlugEn').val(slug);
            }
        });
        
        
    </script>
}