<!-- Card Slide Start -->
<section class="card-1-section">
    <div class="container">
        <h2 class="fw-bold fs-1 mb-5 ms-5 mt-5" data-translate="upcomingFairs.title">Yaklaşan Fuarlar</h2>
    </div>
    <div class="slider-container">
        <div class="slider">

            @if(Model.Count > 0)
            {
                @foreach(var fuarPage in Model)
                {
                    <div class="card" style="background-image: url('@fuarPage.CardImageUrl')">
                        <div class="card-overlay">
                            <div class="card-content">
                                <div class="card-organizer" data-translate="upcomingFairs.card1.category">
                                    @(string.IsNullOrEmpty(fuarPage.Sector) ? "Fuar" : fuarPage.Sector)
                                </div>
                                <h2 class="card-title" data-translate="upcomingFairs.card1.title">
                                    @fuarPage.Title
                                </h2>
                                <a asp-controller="FuarTest" asp-action="Details" asp-route-slug="@fuarPage.Slug" class="card-link" data-translate="upcomingFairs.card1.details">
                                    Fuar Detayı <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                            <div class="card-date">
                                <div class="date-box">
                                    <div class="date-day">@fuarPage.StartDate.ToString("dd")</div>
                                    <div class="date-month">@fuarPage.EndDate.ToString("dd")</div>
                                    <div class="date-info">@fuarPage.StartDate.ToString("MMMM")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-fairs-message">
                    <h3>Yaklaşan fuar bulunmamaktadır.</h3>
                    <p>Önümüzdeki 2 ay içinde planlanan fuar bulunmamaktadır. Lütfen daha sonra tekrar kontrol ediniz.</p>
                </div>
            }
