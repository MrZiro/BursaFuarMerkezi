@{
    var canonicalUrl = ViewData["CanonicalUrl"] as string;
    var alternateUrls = ViewData["AlternateUrls"] as Dictionary<string, string>;
    var alternateUrlsArray = ViewData["AlternateUrls"] as string[];
}

@if (!string.IsNullOrEmpty(canonicalUrl))
{
    <link rel="canonical" href="@canonicalUrl" />
}

@if (alternateUrls != null)
{
    foreach (var alternate in alternateUrls)
    {
        var hreflang = alternate.Key == "en" ? "en-US" : "tr-TR";
        <link rel="alternate" hreflang="@hreflang" href="@alternate.Value" />
    }
}
else if (alternateUrlsArray != null && alternateUrlsArray.Length > 0)
{
    @foreach (var url in alternateUrlsArray)
    {
        var hreflang = url.Contains("/en/") ? "en-US" : "tr-TR";
        <link rel="alternate" hreflang="@hreflang" href="@url" />
    }
} 