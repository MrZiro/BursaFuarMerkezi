@{
    var canonicalUrl = ViewData["CanonicalUrl"] as string ?? ViewBag.CanonicalUrl as string;
    var alternateUrls = ViewData["AlternateUrls"] as Dictionary<string, string> ?? ViewBag.AlternateUrls as Dictionary<string, string>;
}

@if (!string.IsNullOrEmpty(canonicalUrl))
{
    <link rel="canonical" href="@canonicalUrl" />
}

@if (alternateUrls != null && alternateUrls.Any())
{
    foreach (var alternate in alternateUrls)
    {
        var hreflang = alternate.Key == "en" ? "en-US" : "tr-TR";
        <link rel="alternate" hreflang="@hreflang" href="@alternate.Value" />
    }
} 