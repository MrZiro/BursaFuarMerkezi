            </div>
        </div>
        <div class="modal-footer-if">
            <button class="btn btn-secondary close-button-if" id="closeKvkkModal-if">Close</button>
            <button class="btn btn-primary accept-button-if" id="acceptKvkkModal-if">I Accept</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/kvkk.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toastSuccess = document.getElementById('toast-success');
            const toastError = document.getElementById('toast-error');

            function showToast(toastEl) {
                if (toastEl) {
                    toastEl.classList.add('show');
                    setTimeout(() => {
                        toastEl.classList.remove('show');
                    }, 5000); // Hide after 5 seconds
                }
            }

            showToast(toastSuccess);
            showToast(toastError);
        });
    </script>
}
