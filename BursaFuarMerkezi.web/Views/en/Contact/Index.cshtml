@model ContactVM
@{
    ViewData["Title"] = "Contact";
}
<link rel="stylesheet" href="~/css/iletisim.css">
<style>
    .custom-toast {
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: #333;
        color: #fff;
        padding: 15px;
        border-radius: 5px;
        z-index: 1050;
        display: none;
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
    }

    .custom-toast.success {
        background-color: #28a745;
    }

    .custom-toast.error {
        background-color: #dc3545;
    }

    .custom-toast.show {
        display: block;
        opacity: 1;
    }
</style>

@if (TempData["success"] != null)
{
    <div id="toast-success" class="custom-toast success" role="alert" aria-live="assertive" aria-atomic="true">
        @TempData["success"]
    </div>
}

@if (TempData["error"] != null)
{
    <div id="toast-error" class="custom-toast error" role="alert" aria-live="assertive" aria-atomic="true">
        @TempData["error"]
    </div>
}
<div class="banner">
</div>

<div class="container my-5">
    <h1 class="page-title text-center text-md-start">Bursa Fair Center</h1>

    <div class="row">
        <div class="col-lg-6">
            <div class="contact-info">
                <div class="address mb-3">
                    <p class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> Fuar ve Kongre Merkezi Altınova Mah. Fuar Cad. 25 / 1 16250 Osmangazi, BURSA</p>
                </div>
                <div class="email mb-3">
                    <p class="mb-2"><i class="fas fa-envelope me-2"></i> info@kfa.com.tr</p>
                </div>
            </div>

            <div class="mt-3 mb-3">
                <h1 class="fw-bold fs-5">Please write to us for your questions, suggestions and opinions regarding BFM Fair and its organizations.</h1>
            </div>
            <div class="contact-form">
                <form asp-action="Index" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="Name">Name and Surname</label>
                        <input asp-for="Name" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone">Phone</label>
                        <input asp-for="Phone" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email">E-mail Adress</label>
                        <input asp-for="Email" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Message">Message</label>
                        <textarea asp-for="Message" class="form-control" rows="5" required></textarea>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input-if" id="terms-if" required>
                        <label class="form-check-label-if" for="terms-if">
                           <a href="/en/kvkk-documents" target="_blank">I have read and accept the terms and conditions page of the website</a> *
                        </label>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4">
                            <button type="submit" class="btn btn-submit w-100">
                                <i class="fas fa-paper-plane me-2"></i><span>SEND</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3045.7904939407454!2d29.065481!3d40.2359602!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ca3ff8cd44c0c3%3A0x9d903d86b99754e8!2sBursa%20Fuar%20Merkezi!5e0!3m2!1str!2str!4v1745241403678!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>

