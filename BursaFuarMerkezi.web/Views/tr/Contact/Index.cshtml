        <div class="modal-footer-if">
            <button class="btn btn-secondary close-button-if" id="closeKvkkModal-if">Kapat</button>
            <button class="btn btn-primary accept-button-if" id="acceptKvkkModal-if">Kabul Ediyorum</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/kvkk.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toastSuccess = document.getElementById('toast-success');
            if (toastSuccess) {
                toastSuccess.classList.add('show');
                setTimeout(() => {
                    toastSuccess.classList.remove('show');
                }, 5000);
            }

            const toastError = document.getElementById('toast-error');
            if (toastError) {
                toastError.classList.add('show');
                setTimeout(() => {
                    toastError.classList.remove('show');
                }, 5000);
            }
        });
    </script>
}
