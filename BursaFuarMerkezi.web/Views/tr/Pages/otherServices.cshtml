            <div class="sidebar">
                <div class="sidebar-sticky">
                    <div class="sidebar-header p-3 mb-3 text-center">
                        <h3 class="">
                            BFM
                        </h3>
                        <p class="text-muted small mb-0">
                            Bursa Fuar Merkezi
                        </p>
                    </div>
                    <ul class="nav flex-column">
                        <!-- Hakkımızda -->
                        <li class="nav-item dropdown">
                            <a aria-expanded="false" class="nav-link dropdown-toggle"
                                data-bs-target="#hakkimizdaSubmenu" data-bs-toggle="collapse" href="#">
                                <span class="menu-icon">
                                    <i class="fas fa-info-circle">
                                    </i>
                                </span>
                                <span>
                                    Organizatör
                                </span>
                            </a>
                            <div class="collapse" id="hakkimizdaSubmenu">
                                <ul class="nav flex-column submenu">
                                    <li class="nav-item">
                                        <a class="nav-link" href="/tr/organizator">
                                            <i class="fas fa-angle-right me-2">
                                            </i>
                                            E-Broşürler
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/tr/diger-hizmetler">
                                            <i class="fas fa-angle-right me-2">
                                            </i>
                                            Diğer Hizmetler
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/tr/planlar">
                                            <i class="fas fa-angle-right me-2">
                                            </i>
                                            Planlar
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/tr/toplanti-salonlari">
                                            <i class="fas fa-angle-right me-2">
