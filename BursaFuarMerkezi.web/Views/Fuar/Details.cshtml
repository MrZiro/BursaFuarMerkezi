@model FuarPage
@{
    ViewData["Title"] = Model.Title;
    ViewData["MetaDescription"] = Model.MetaDescription;
    ViewData["MetaKeywords"] = Model.MetaKeywords;
}

<div class="banner">
    @if (!string.IsNullOrEmpty(Model.FeaturedImageUrl))
    {
        <img src="@Model.FeaturedImageUrl" alt="@Model.Title">
    }
    else
    {
        <img src="~/images/iletisim-banner.png" alt="@Model.Title">
    }
</div>  

<div class="container mt-4">
    <!-- Fuar Başlık Bölümü -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="organizer-info">Bursa Fuar Merkezi</div>
            <h1 class="fair-title">@Model.Title</h1>
            
            <div class="d-flex justify-content-end align-items-center mt-3">
                <button class="btn btn-outline-danger rounded-circle me-2 share-btn">
                    <i class="fas fa-share-alt"></i>
                </button>
                <button class="btn btn-danger takvim-ekle-btn">
                    <i class="far fa-calendar-plus me-2"></i>
                    Takvime Ekle
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Sol Kolon - Fuar Açıklaması ve Takvim -->
        <div class="col-lg-8 mb-4">
            <div class="fair-description mb-4">
                <div class="blog-post-content">
                    @Html.Raw(Model.Content)
                </div>
            </div>

            <!-- Fuar Takvimi Bölümü -->
            <div class="fair-calendar mb-4">
                <h2 class="calendar-title">Fuar Takvimi <span class="calendar-dates">@Model.CreatedAt.ToString("dd MMMM yyyy")</span></h2>
                
                <div class="calendar-cards">
                    <div class="row">
                        <!-- Gün -->
                        <div class="col-md-4 col-sm-6 mb-3">
                            <div class="calendar-card">
                                <div class="card-header">@Model.CreatedAt.ToString("ddd dd")</div>
                                <div class="card-body">
                                    <p>@Model.Title</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="salon-info">
                    <span class="salon-label">Salon</span>
                    <span class="salon-number">01</span>
                </div>
            </div>
        </div>
        
        <!-- Sağ Kolon - Fuar Künyesi -->
        <div class="col-lg-4">
            <div class="fair-info-panel">
                <h3>Fuar Künyesi</h3>
                
                <div class="info-item">
                    <div class="info-label">Başlangıç Tarihi:</div>
                    <div class="info-value">@Model.CreatedAt.ToString("dd.MM.yyyy")</div>
                </div>
                
                @if (Model.UpdatedAt.HasValue)
                {
                    <div class="info-item">
                        <div class="info-label">Bitiş Tarihi:</div>
                        <div class="info-value">@Model.UpdatedAt.Value.ToString("dd.MM.yyyy")</div>
                    </div>
                }
                
                <div class="info-item">
                    <div class="info-label">Fuar Salonu:</div>
                    <div class="info-value">1</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">Fuar Konusu:</div>
                    <div class="info-value">@Model.PageType</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">Organizatör:</div>
                    <div class="info-value">Bursa Fuar Merkezi</div>
                </div>

                <div class="info-item">
                    <div class="info-label">Ziyaret Saatleri:</div>
                    <div class="info-value">09:30-18:00</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">Fuar Alanı:</div>
                    <div class="info-value">Bursa Uluslararası Fuar ve Kongre Merkezi</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">Web:</div>
                    <div class="info-value"><a href="https://bursafuarmerkezi.com" target="_blank">https://bursafuarmerkezi.com</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Share button functionality
    document.querySelector('.share-btn').addEventListener('click', function() {
        if (navigator.share) {
            navigator.share({
                title: '@Model.Title',
                url: window.location.href
            })
            .catch(console.error);
        } else {
            // Fallback for browsers that don't support the Web Share API
            alert('Link kopyalandı: ' + window.location.href);
        }
    });

    // Add to calendar functionality
    document.querySelector('.takvim-ekle-btn').addEventListener('click', function() {
        const startDate = new Date('@Model.CreatedAt.ToString("yyyy-MM-dd")');
        const endDate = new Date('@(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("yyyy-MM-dd") : Model.CreatedAt.AddDays(1).ToString("yyyy-MM-dd"))');
        
        const calendarUrl = `https://www.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent('@Model.Title')}&dates=${startDate.toISOString().replace(/-|:|\.\d+/g, '')}\/${endDate.toISOString().replace(/-|:|\.\d+/g, '')}&details=${encodeURIComponent('Bursa Fuar Merkezi etkinliği')}&location=${encodeURIComponent('Bursa Uluslararası Fuar ve Kongre Merkezi')}`;
        
        window.open(calendarUrl, '_blank');
    });
</script>
} 