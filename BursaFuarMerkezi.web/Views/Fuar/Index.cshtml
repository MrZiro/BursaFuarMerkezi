@model List<FuarPage>

<div class="container my-5">
    <h1 class="display-4 mb-4">Fuar Etkinlikleri</h1>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">Henüz fuar sayfası yayınlanmamıştır.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var fuarPage in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(fuarPage.FeaturedImageUrl))
                        {
                            <img src="@fuarPage.FeaturedImageUrl" class="card-img-top" alt="@fuarPage.Title" 
                                 style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light text-center pt-5 pb-5">
                                <i class="bi bi-image" style="font-size: 4rem;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@fuarPage.Title</h5>
                            <p class="card-text text-muted">
                                <small>
                                    <i class="bi bi-calendar"></i> 
                                    @fuarPage.CreatedAt.ToString("dd.MM.yyyy")
                                </small>
                            </p>
                            <a asp-controller="Fuar" asp-action="Details" asp-route-slug="@fuarPage.Slug" 
                               class="btn btn-primary stretched-link">
                                Detaylar <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
